<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.leimingtech.modules.dao.attribute.AttributeGroupRelationDao">

    <resultMap type="com.leimingtech.modules.entity.attribute.AttributeGroupRelationEntity" id="attributeGroupRelationMap">
        <result property="id" column="id"/>
        <result property="groupId" column="group_id"/>
        <result property="attrId" column="attr_id"/>
        <result property="creator" column="creator"/>
        <result property="createDate" column="create_date"/>
        <result property="updater" column="updater"/>
        <result property="updateDate" column="update_date"/>
        <result property="delFlag" column="del_flag"/>
        <result property="version" column="version"/>
    </resultMap>

    <delete id="deleteByAttrId">
        delete from lmshop_attr_group_rel
        where del_flag = 0 and group_id = #{groupId}
    </delete>


</mapper>